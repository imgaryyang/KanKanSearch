<schema name="coretest" version="1.5" >
	<fieldType name="uuid" class="solr.UUIDField" indexed="true" />

	<fieldType name="string" class="solr.StrField" sortMissingLast="true"/>  

	<fieldType name="long" class="solr.TrieLongField" precisionStep="0" positionIncrementGap="0"/>  

	<fieldType name="int" class="solr.TrieIntField" precisionStep="0" positionIncrementGap="0"/>   

	<fieldType name="text_general" class="solr.TextField" positionIncrementGap="100"/>  
	
	<fieldType name="text_ik_smart_all" class="solr.TextField" positionIncrementGap="100">
		<analyzer type="index"> 
			<tokenizer class="org.apache.lucene.analysis.ik.IKTokenizerFactory" useSmart="true"/> 
		</analyzer>
		<analyzer type="query"> 
			<tokenizer class="org.apache.lucene.analysis.ik.IKTokenizerFactory" useSmart="true"/> 
		</analyzer>
	</fieldType>
	
	<fieldType name="text_ik_smart" class="solr.TextField" positionIncrementGap="100">
		<analyzer type="index"> 
			<tokenizer class="org.apache.lucene.analysis.ik.IKTokenizerFactory" useSmart="false"/> 
		</analyzer>
		<analyzer type="query"> 
			<tokenizer class="org.apache.lucene.analysis.ik.IKTokenizerFactory" useSmart="true"/> 
		</analyzer>
	</fieldType>

	<fieldType name="text_ik" class="solr.TextField" positionIncrementGap="100">
		<analyzer type="index"> 
			<tokenizer class="org.apache.lucene.analysis.ik.IKTokenizerFactory" useSmart="false"/> 
		</analyzer>
		<analyzer type="query"> 
			<tokenizer class="org.apache.lucene.analysis.ik.IKTokenizerFactory" useSmart="false"/> 
		</analyzer>
	</fieldType>
	
	<fieldtype name="text_mmseg_Complex" class="solr.TextField" positionIncrementGap="100">
		<analyzer>
			<tokenizer class="com.chenlb.mmseg4j.solr.MMSegTokenizerFactory" mode="complex" dicPath="/usr/local/tomcat/webapps/solr/WEB-INF/classes/ext.dic"/>
		</analyzer>
	</fieldtype>
	<fieldtype name="text_mmseg_MaxWord" class="solr.TextField" positionIncrementGap="100">
		<analyzer>
			<tokenizer class="com.chenlb.mmseg4j.solr.MMSegTokenizerFactory" mode="max-word" dicPath="/usr/local/tomcat/webapps/solr/WEB-INF/classes/ext.dic" />
		</analyzer>
	</fieldtype>
	<fieldtype name="text_mmseg_Simple" class="solr.TextField" positionIncrementGap="100">
		<analyzer>
			<tokenizer class="com.chenlb.mmseg4j.solr.MMSegTokenizerFactory" mode="simple" dicPath="/usr/local/tomcat/webapps/solr/WEB-INF/classes/ext.dic" />
		</analyzer>
	</fieldtype>

	<fields>
		<field name="docId" type="uuid" indexed="true" stored="true" multiValued="false" required="true" />
		<field name="id" type="string" indexed="true" stored="true" multiValued="false" />
		<field name="classid" type="string" indexed="true" stored="true" multiValued="false"/> 
		<field name="checked" type="string" indexed="true" stored="true" multiValued="false" />
		<field name="type" type="string" indexed="true" stored="true" multiValued="false"/> 
		<field name="title" type="text_ik" indexed="true" stored="true" multiValued="false" /> 
		<field name="titleGroup" type="string" indexed="true" stored="true" multiValued="false" docValues="true"/> 
		<field name="onclick" type="string" indexed="false" stored="true" multiValued="false" /> 
		<field name="titlepic" type="string" indexed="false" stored="true" multiValued="false" /> 
		<field name="newstime" type="string" indexed="false" stored="true" multiValued="false" /> 
		<field name="keywords" type="text_ik" indexed="false" stored="true" multiValued="false" /> 
		<field name="videourl" type="string" indexed="false" stored="true" multiValued="false"/> 
		<field name="titleurl" type="string" indexed="false" stored="true" multiValued="false"/> 
		<field name="authorid" type="string" indexed="true" stored="true" multiValued="false"/> 
		<field name="author" type="string" indexed="true" stored="true" multiValued="false"/> 
		<field name="intro" type="text_ik" indexed="true" stored="true" multiValued="false"/> 
		<field name="imagegroup" type="string" indexed="false" stored="true" multiValued="false"/> 
		<field name="docversion" type="string" indexed="true" stored="true" multiValued="false"/>
		<!--拷贝字段-->
		<field name="all" type="text_ik_smart" indexed="true" stored="false" multiValued="true"/>
		<!--拷贝字段-->
		<field name="all2" type="text_ik" indexed="true" stored="false" multiValued="true"/>

		
		<field name="_version_" type="long" indexed="true" stored="true" multiValued="false"/>

	</fields>
	<copyField source="title" dest="all"/>
	<copyField source="keywords" dest="all"/>
	<copyField source="intro" dest="all"/>
	<copyField source="title" dest="all2"/>
	<copyField source="keywords" dest="all2"/>
	<copyField source="intro" dest="all2"/>

	<solrQueryParser defaultOperator="OR"/>  
	<uniqueKey>docId</uniqueKey>
	<defaultSearchField>all</defaultSearchField>

</schema>